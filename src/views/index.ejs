<!-- Sessão Pega Formulario -->
<div class="container-fluid containers col-md-11 col-sm-12 divContatoForm">
    <div class="row divPreencha">
        <p class="preencha">Preencha o formulario que logo um representante estará entrando em contato com você.</p>
    </div>
    <div class="row">
        <form class="form col-md-6 divForm" action="/" method="POST" id="form">
            <div class="form-group">
              <label for="exampleInputName1">Nome Completo</label>
              <input type="string" name="nomeCompleto" class="form-control nome" id="nome" placeholder="Nome" required>
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Endereço de email</label>
                <input type="email" name="email" class="form-control email" id="e-mail"  aria-describedby="emailHelp" placeholder="Email">
              </div>
            <div class="form-group">
                <label for="exampleInputName1">Telefone</label>
                <input type="text" name="telefone" id="tel" class="form-control telefoneMascara" placeholder="Telefone" maxlength="13" OnkeyPress="formatar('##-#####-####', this)" required>
            </div>
            <input type="submit" class="btn btn-primary enviar" id="button" value="Enviar" >
        </form>
        <div class="icons col-md-6 divContato">
            <div class="row">
                <div class="div-left col-md-6">

                    <div class="row" id="contato">
                        <ion-icon name="logo-whatsapp"></ion-icon>
                        <div class="info">
                            <div class="head">Contato</div>
                            <div class="sub-title">(48) 3371-5402</div>
                            <div class="sub-title">(48) 99186-8080</div>
                        </div>
                    </div>
                    <div class="row">
                        <ion-icon name="mail-outline"></ion-icon>
                        <div class="info">
                            <div class="head">Email</div>
                            <div class="sub-title">contato@mgtecsolar.com.br</div>
                        </div>
                    </div>
                </div>
                <div class="div-right col-md-6">
                    <div class="row">
                        <ion-icon name="logo-instagram"></ion-icon>
                        <div class="info">
                            <div class="head">Instagram</div>
                            <a href="https://www.instagram.com/mgtecenergiasolar/" target="_blank">
                                <div class="sub-title">@mgtecenergiasolar</div>
                            </a>
                        </div>
                    </div>
                    <div class="row">
                        <ion-icon name="globe-outline"></ion-icon>
                        <div class="info">
                            <div class="head">Site</div>
                            <a href="https://www.mgtecsolar.com.br/" target="_blank">
